<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polidea.rxandroidble.sample">

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".example1_scanning.ScanActivity"
            android:label="@string/title_activity_scan">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".example2_connection.ConnectionExampleActivity"
            android:label="@string/title_activity_connection" />
        <activity
            android:name=".example3_discovery.ServiceDiscoveryExampleActivity"
            android:label="@string/title_service_discovery" />
        <activity
            android:name=".example4_characteristic.CharacteristicOperationExampleActivity"
            android:label="@string/title_char_operation" />
        <activity
            android:name=".DeviceActivity"
            android:label="@string/title_activity_device" />
    </application>
</manifest>
